{
  "name": "bet-the-friend-public",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/settle-bets",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/showdown/expire",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/bets/expire",
      "schedule": "*/15 * * * *"
    }
  ]
} 